<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :role %><br />
    <%= f.select(:role, options_for_select(User::ROLELIST.collect { |l| [l.capitalize, l]}), {:include_blank => "Please Select"})  %>
  </p>
  <p>
    <%= f.label :active %><br />
    <%= f.select(:active, options_for_select(User::ACTIVELIST), {:include_blank => "Please Select"})  %>
  </p>
  
  <p class="button"><%= f.submit %></p>
<% end %>


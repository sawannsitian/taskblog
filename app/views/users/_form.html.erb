<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <div class="field">
    <%= f.label :role %><br />
    <%= f.select(:role, options_for_select(User::ROLELIST.collect { |l| [l.capitalize, l]}), {:include_blank => "Please Select"})  %>
  </div>
  <div class="field">
    <%= f.label :active %><br />
    <%= f.select(:active, options_for_select(User::ACTIVELIST), {:include_blank => "Please Select"})  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
